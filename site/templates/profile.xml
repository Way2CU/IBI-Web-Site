<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="profile"/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:template file="stock/header_generic.xml">
				<param name="logo" value="logo-color"/>
				<param name="sprite" value="site-sprite.svg"/>
				<param name="menu" value="parts/menu_items.xml"/>
				<param name="mobile_menu_sprite_icon" value="icon-menu"/>
				<param name="fixed" value=""/>
			</cms:template>

			<section class="profile">
				<h1 class="styled profile"><cms:text constant="profile"/></h1>

				<cms:module
					name="articles"
					action="show"
					text_id="main_profile"
					template="stock/article_generic.xml"
					/>

				<cms:module
					name="articles"
					action="show_list"
					group="profile_page"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
					<param name="title_tag" value="h2"/>
				</cms:module>
			</section>
			<footer>
				<cms:template file="parts/footer.xml" />
			</footer>
		</body>
	</html>
</document>
