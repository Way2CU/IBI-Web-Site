<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="contact"/>
			</title>
			<cms:script src="_BASEURL.'/site/scripts/map.js'" cms:eval="src"/>
			<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAWpa2fUPFG1VE27q1p7FYanJuMsQKzGyE"></script>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:template file="stock/header_generic.xml">
				<param name="logo_sprite_icon" value="icon-logo-color"/>
				<param name="sprite" value="site-sprite.svg"/>
				<param name="menu" value="parts/menu_items.xml"/>
				<param name="mobile_menu_sprite_icon" value="icon-menu"/>
				<param name="fixed" value=""/>
			</cms:template>

			<section class="contact">
				<h1 class="styled contact">
					<cms:text constant="contact"/>
				</h1>
				<div id="form_container">
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
				<div id="map">

				</div>
			</section>
			<footer>
				<cms:template file="parts/footer.xml" />

				<!-- Copyright -->
				<cms:template file="stock/copyright.xml">
						<param name="holder" value="copyright_holder"/>
						<param name="text" value="copyright_text"/>
						<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>
