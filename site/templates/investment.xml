<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:module
					name="head_tag"
					action="add_to_title"
					value="news"
					cms:constant="value"
					/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>
			<cms:raw file="parts/gtag.txt"/>
		</head>

		<body>
			<!-- Embed site sprite -->
			<cms:svg file="site-sprite.svg"/>

			<cms:template file="parts/header.xml"/>

			<section class="news">
				<h1 class="styled news">
					<cms:text constant="investment"/>
				</h1>

				<cms:module
					name="articles"
					action="show"
					text_id="features_article"
					template="stock/article_generic.xml"
					/>

				<div class="features">
					<ul>
						<cms:module
							name="articles"
							action="show_list"
							group="features"
							template="stock/features_generic.xml"
							>
							<param name="sprite" value="site-sprite.svg"/>
						</cms:module>
					</ul>
				</div>
			</section>

			<cms:template file="parts/footer.xml" />
		</body>
	</html>
</document>
