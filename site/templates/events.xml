<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="events"/>
			</title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:template file="stock/header_generic.xml">
				<param name="logo" value="logo-color.svg"/>
				<param name="sprite" value="site-sprite.svg"/>
				<param name="menu" value="parts/menu_items.xml"/>
				<param name="mobile_menu_sprite_icon" value="icon-menu"/>
				<param name="fixed" value=""/>
			</cms:template>

			<section class="events">
				<h1 class="styled events"><cms:text constant="events"/></h1>

				<div class="articles">
					<cms:module
						name="articles"
						action="show_list"
						group="events_articles"
						template="parts/article_custom_link.xml"
						/>
				</div>

			</section>

			<cms:template file="parts/footer.xml" />
		</body>
	</html>
</document>
