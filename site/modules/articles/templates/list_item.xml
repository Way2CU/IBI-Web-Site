<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">
		<span class="column" style="width: 300px;">
			<cms:var name="$params['title'][$language]"/>
		</span>
		<span class="column" style="width: 100px;">
			<cms:var name="$params['author']"/>
		</span>
		<span class="column" style="width: 70px;">
			<cms:var name="round($params['rating'], 1)"/>
		</span>
		<span class="column">
			<cms:var name="$params['item_change']"/><cms:raw text=" "/>
			<cms:var name="$params['item_delete']"/>
		</span>
	</div>
</document>
